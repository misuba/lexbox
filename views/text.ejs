        $("#textctrls").on("click", ".linkbtn", function(){
          var tspan = $("#body").getSelection();
          $("#body").replaceSelectedText("_linkcode(" + tspan.text + ") or whatever");
        });
        
      }); */
    </script>

  </body>
</html>